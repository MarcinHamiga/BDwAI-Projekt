@{
    Layout = null;
    @model ProjektBDwAI.Models.User;
}


<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, inital-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Ekran logowania</title>
    <style>
        .text-danger ul {
            list-style-type: none;
            padding-left: 0;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="card mt-4">
            <div class="card-header align-content-center text-center">
                <h1>Logowanie</h1>
            </div>
            <div class="card-body align-content-center text-center">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post" asp-action="Login" asp-controller="Account">
                    <div class="row mb-1">
                        <div class="col-md-12">
                            <div class="row">
                                <label asp-for="Username" class="form-label col-md-12">Nazwa użytkownika</label>
                                <input asp-for="Username" class="form-text col-md-4 offset-4" type="text" />
                                <span asp-validation-for="Username" class="text-danger col-md-4 offset-4"></span>
                            </div>
                        </div>
                        <div class="col-md-12 mt-4">
                            <div class="row">
                                <label asp-for="Password" class="form-label col-md-12">Hasło</label>
                                <input asp-for="Password" class="form-text col-md-4 offset-4" type="password" />
                                <span asp-validation-for="Password" class="text-danger col-md-4 offset-4"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <input type="submit" class="btn btn-primary mt-4 col-4 offset-4" value="Zaloguj się" />
                    </div>
                    <div class="row">
                         <a class="btn btn-primary mt-4 col-4 offset-4" asp-action="Register" asp-controller="Account" type="">Do rejestracji</a>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p>&copy - Marcin Hamiga - Kacper Słupski - 2024</p>
            </div>
        </div>
    </div>
</body>
</html>