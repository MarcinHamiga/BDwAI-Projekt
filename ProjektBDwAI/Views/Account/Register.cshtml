@{
    Layout = null;
    @model ProjektBDwAI.Models.User;
}

<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, inital-scale=1.0" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <title>Ekran rejestracji</title>
    </head>
    <body>
       <div class="container-fluid">
           <div class="card mt-4">
               <div class="card-header align-content-center text-center">
                   <h1>Rejestracja</h1>
               </div>
               <div class="card-body align-content-center text-center">
                   <div asp-validation-summary="All" class="text-danger"></div>
                   <form method="post" asp-action="Register" asp-controller="Account">
                       <div class="row mb-1">
                           <div class="col-md-12">
                               <div class="row">
                                   <label asp-for="Username" class="form-label col-md-12">Nazwa użytkownika</label>
                                   <input asp-for="Username" class="form-text col-md-4 offset-4" type="text" />
                                    <span asp-validation-for="Username" class="text-danger col-md-4 offset-4"></span>
                               </div>
                           </div>
                           <div class="col-md-12 mt-4">
                               <div class="row">
                                   <label asp-for="Password" class="form-label col-md-12">Hasło</label>
                                   <input asp-for="Password" class="form-text col-md-4 offset-4" type="password" />
                                   <span asp-validation-for="Password" class="text-danger col-md-4 offset-4"></span>
                               </div>
                           </div>
                            @*<div class="col-md-12 mt-4">
                                <div class="row">
                                    <label asp-for="isAdmin" class="form-label col-md-12">isAdmin</label>
                                    <input asp-for="isAdmin" class="form-text col-md-4 offset-4" type="checkbox" />
                                    <span asp-validation-for="isAdmin" class="text-danger col-md-4 offset-4"></span>
                                </div>
                            </div>*@
                       </div>
                       <div>
                           <input type="submit" class="btn btn-primary mt-4" value="Zarejestruj się" />
                       </div>
                   </form>
               </div>
           </div>
       </div>
    </body>
</html>