@{
    @model ChangeUserDataViewModel;
}

<div class="text-center container">
    <div class="card">
        <div class="card-header">
            <h1>Zmień hasło</h1>
        </div>
        <div class="card-body">
            @{
                if (ViewData["Success"] != null && ViewData["Success"] is true)
                {   
                    <div class="row">
                        <span class="text-success col-md-4 offset-4">Hasło zostało zmienione</span>
                    </div>
                }
            }
            
            <form asp-action="Change" asp-controller="Account" method="post">
                <div class="row">
                    <label asp-for="Password" class="form-label col-md-12">Hasło</label>
                    <input asp-for="Password" class="form-text col-md-4 offset-4" type="password" />
                    <span asp-validation-for="Password" class="text-danger col-md-4 offset-4"></span>
                </div>
                <div class="row">
                    <label asp-for="RetypePassword" class="form-label col-md-12">Powtórz hasło</label>
                    <input asp-for="RetypePassword" class="form-text col-md-4 offset-4" type="password" />
                    <span asp-validation-for="RetypePassword" class="text-danger col-md-4 offset-4"></span>
                </div>
                <div class="row">
                    <input type="submit" class="btn btn-primary mt-4 col-4 offset-4" value="Zmień hasło" />
                </div>
            </form>
        </div>
        
    </div>
    
    
</div>